{% extends 'base_connected.html.twig' %}

{% block body %}

            <div class="row">
                 <div class="col-lg-12">
                     <h1 class="page-header"><u>Produit </u></h1>
                </div>
            </div>

    <table class="table table-striped" width="1200">
        <tbody>
            <tr>
                <th  scope="col">Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th  scope="col">Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th  scope="col">Image</th>
                <td>{{ produit.image }}</td>
            </tr>
            <tr>
                <th  scope="col">Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th  scope="col">Contenu</th>
                <td>{{ produit.contenu }}</td>
            </tr>
            <tr>
                <th  scope="col">Publier</th>
                <td>{{ produit.publier }}</td>
            </tr>
            <tr>
                <th  scope="col">Datedecreation</th>
                <td>{{ produit.DateDeCreation|date("d-m-Y") }}</td>
            </tr>
            <tr>
                <th  scope="col">Position</th>
                <td>{{ produit.position }}</td>
            </tr>
        </tbody>

    </table>


            <a  class="btn btn-primary " href="{{ path('produit_index') }}">Back to the list</a><br><br>

            <a class="btn btn-primary" href="{{ path('produit_edit', { 'id': produit.id }) }}">Edit</a><br><br>
  
            {{ form_start(delete_form) }}
                <input class="btn btn-primary" class="btn btn-outline-dark" type="submit" value="Delete">
            {{ form_end(delete_form) }}

{% endblock %}
