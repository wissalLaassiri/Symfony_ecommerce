{% extends 'base_connected.html.twig' %}

{% block body %}

            <div class="row">
                 <div class="col-lg-12">
                     <h1 class="page-header">List des marques</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">

                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                    <th >Titre</th>
                                    <th >Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                             {% for marque in marques %}
                                    <tr>
                                    <td><a href="{{ path('marque_show', { 'id': marque.id }) }}">{{ marque.id }}</a></td>
                                    <td>{{ marque.titre }}</td>
                                    <td>     
                                     <a class="btn btn-primary" href="{{ path('marque_show', { 'id': marque.id }) }}">show</a>
                                        <a class="btn btn-primary" href="{{ path('marque_edit', { 'id': marque.id }) }}">edit</a>
                                    </td>
                                    </tr>
                            {% endfor %}
                            </tbody>

                         </table>

{% endblock %}
